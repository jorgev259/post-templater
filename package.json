{
  "name": "templater",
  "version": "1.0.0",
  "author": "ChitoWarlock",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "bootstrap": "^4.5.3",
    "classnames": "^2.2.6",
    "customize-cra": "^1.0.0",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^6.0.1",
    "node-sass": "4.14.1",
    "react": "^17.0.1",
    "react-async-hook": "^3.6.2",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "react-toastify": "^6.0.9",
    "reactstrap": "^8.7.1"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "repository": "https://github.com/jorgev259/post-templater",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "dev": "concurrently \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && cross-env electron .\"",
    "prod": "cross-env ELECTRON_IS_DEV=0 electron .",
    "electron-pack": "yarn-build && electron-builder --c.extraMetadata.main=build/electron.js --publish never",
    "electron-publish": "yarn build && electron-builder --c.extraMetadata.main=build/electron.js --publish always"
  },
    "build": {
      "publish": {
        "provider": "github"
      },
      "productName": "SquidBoard Templater",
      "appId": "squid.templater",
      "win": {
        "target": ["portable"]
      },
      "files": [
        "build/**/*",
        "node_modules/**/*"
      ],
      "directories": {
        "buildResources": "assets",
        "output": "electron/output"
      }
    },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "electron-reload": "^1.5.0",
    "nodemon": "^2.0.6",
    "react-app-rewired": "^2.1.6",
    "wait-on": "^5.2.0"
  }
}
